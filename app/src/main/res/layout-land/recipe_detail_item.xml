<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/inter_block_margin"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            app:cardElevation="@dimen/small_margin"
            android:id="@+id/card_playerview"
            android:layout_marginBottom="@dimen/inter_view_margin"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/vid_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_toggle_text"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_dialog_info"
            app:elevation="@dimen/small_margin"
            app:fabSize="mini"
            android:padding="@dimen/inter_view_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
            app:cardElevation="@dimen/small_margin"
            android:layout_marginBottom="@dimen/inter_view_margin"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:id="@+id/card_text"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_recipe_text_item"
                android:layout_width="wrap_content"
                android:textSize="@dimen/normal_text"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            app:cardElevation="@dimen/small_margin"
            android:layout_marginBottom="@dimen/inter_view_margin"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:id="@+id/card_text_no_vid"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_recipe_text_item_no_vid"
                android:layout_width="wrap_content"
                android:textSize="@dimen/normal_text"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>




</FrameLayout>
